<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <description>Shows search results for international addresses</description>
    <isExposed>true</isExposed>
    <masterLabel>International Address Search Results</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="searchResults" type="@salesforce/schema/appsolutely__International_Address__c[]" label="Search Results" role="inputOnly"/>
            <property name="country" type="String" label="Country as ISO 3166 Alpha 3 code" description="Country as ISO 3166 Alpha 3 code. Defaults to NLD if not filled and Country as ISO 3166 Alpha 2 code is not filled as well." role="inputOnly"/>
            <property name="selectedResult" type="@salesforce/schema/appsolutely__International_Address__c" label="Selected Search Result" role="outputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
