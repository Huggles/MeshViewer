<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <description>Search International Address</description>
    <isExposed>true</isExposed>
    <masterLabel>Search International Address</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="organization" type="String" label="Organization"/>
            <property name="organizationRequired" type="Boolean" role="inputOnly" label="Organization required" description="True if the user must fill the organization field"/>
            <property name="building" label="Building" type="String"/>
            <property name="street" label="Street" type="String"/>
            <property name="housenr" label="House Number" type="String"/>
            <property name="pobox" label="PO Box" type="String"/>
            <property name="locality" label="City or Locality" type="String"/>
            <property name="postcode" label="Postcode" type="String"/>
            <property name="province" label="Province" type="String"/>
            <property name="language" label="Language" type="String"/>
            <property name="housenrAddition" label="House Nr Addition" type="String"/>
            <property name="lettercombination" label="Letter Combination" type="String"/>
            <property name="addresstype" label="Address Type" type="String"/>
            <property name="municipality" label="Municipality" type="String"/>
            <property name="country" type="String" label="Country as ISO 3166 Alpha 3 code" description="Country as ISO 3166 Alpha 3 code. Defaults to NLD if not filled and Country as ISO 3166 Alpha 2 code is not filled as well."/>
            <property name="countryInAlpha2Code" type="String" role="inputOnly" label="Country as ISO 3166 Alpha 2 code" description="Country as ISO 3166 Alpha 2 code"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
