<aura:component controller="PageLayoutRecordDisplayController" implements="flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="PageLayoutName" type="String" access="global"/>
    <aura:attribute name="RecordId" type="String" access="global"/>
    <aura:attribute name="objectApiName" type="String" Default = ""/>

	<aura:attribute name="PageLayout" type="Object" access="private" />
	
	<aura:handler name="init" value="{!this}" action="{!c.init}" />
	
	<div class="slds-box slds-theme_default">
	<aura:if isTrue="{! v.RecordId }">
        <force:recordView recordId="{! v.RecordId }" />
    </aura:if>
    </div>
</aura:component>