<aura:component controller="GlobalFlowQuickActionController" description="flowQuickAction. 'abstract' class to be used for showing flows in a global quick action" access="global">

    <aura:attribute name="flowAPIName" type="String" access="global"/>
    <aura:attribute name="flowSettingName" type="String" access="global"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler name="flowChangeEvent" event="c:flowStatusChangedEvent" action="{!c.handleFlowChangeEvent}"/>
    <aura:handler name="change" value="{!v.flowAPIName}" action="{!c.handleFlowAPINameChangeEvent}"/>

    <aura:attribute name="overlayPromise" type="Aura.Component" access="private"/>
    <lightning:overlayLibrary aura:id="overlayLib"/>
</aura:component>
