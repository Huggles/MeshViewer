<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <description>Shows search results as business dossiers for CreditSafe</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="searchResults" type="@salesforce/schema/appsolutely__Business_Dossier__c[]" label="Search Results" role="inputOnly"/>
            <property name="selectedResult" type="@salesforce/schema/appsolutely__Business_Dossier__c" label="Selected Search Result" role="outputOnly"/>
        </targetConfig>
    </targetConfigs>
    <masterLabel>Credit Safe Dossier Search Results</masterLabel>
</LightningComponentBundle>
