<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <description>Form you can use to search for an organisation. Use this in for example a Flow</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="selectedCountry" type="String" label="Selected Country"/>
            <property name="tradeName" type="String" label="Trade Name"/>
            <property name="street" type="String" label="Street"/>
            <property name="houseNumber" type="String" label="House Number"/>
            <property name="houseNumberAddition" type="String" label="House Number Addition"/>
            <property name="city" type="String" label="City"/>
            <property name="postalCode" type="String" label="Postal Code"/>
        </targetConfig>
    </targetConfigs>
    <masterLabel>Organisation Search Form</masterLabel>
</LightningComponentBundle>
