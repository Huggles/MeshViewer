<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <description>Use it to show an error as toast to the user in a screen flow.</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="title" type="String" label="Toast Title" default="Error" role="inputOnly"/>
            <property name="message" type="String" label="Message" role="inputOnly"/>
<!--            <property name="variant" type="String" label="Variant (success, error, warning, info)" default="error" role="inputOnly"/>-->
<!--            <property name="autoCloseTime" type="Integer" label="Number of milliseconds to close the toast" role="inputOnly"/>-->
<!--            <property name="autoClose" type="Boolean" label="Auto close (true to auto close afer auto close time)" default="true" role="inputOnly"/>-->
<!--            <property name="autoCloseErrorWarning" type="Boolean" label="Auto close non success messages" default="false" role="inputOnly"/>-->
        </targetConfig>
    </targetConfigs>
    <masterLabel>Flow Error Handler</masterLabel>
</LightningComponentBundle>
