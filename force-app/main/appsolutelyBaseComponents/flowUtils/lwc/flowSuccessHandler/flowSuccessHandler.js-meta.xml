<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <description>Use it to show an success as toast to the user in a screen flow.</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="title" type="String" label="Toast Title" default="Success" role="inputOnly"/>
            <property name="message" type="String" label="Message" role="inputOnly"/>
        </targetConfig>
    </targetConfigs>
    <masterLabel>Flow Success Handler</masterLabel>
</LightningComponentBundle>
